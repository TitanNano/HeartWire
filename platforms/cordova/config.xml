<?xml version='1.0' encoding='utf-8'?>
<widget id="org.titannano.heartwire" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HeartWire</name>
    <description>
        Simple direct communication messaging app.
    </description>
    <author email="jovan.gerodetti@titannano.de" href="http://blog.titannano.de">
        Jovan Gerodetti
    </author>
    <content src="index.html" />
    <icon src="icons/icon.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />

        <!-- you can use any density that exists in the Android project -->
        <splash src="splashscreen/splash.mdpi.png" density="port-mdpi"/>
        <splash src="splashscreen/splash.mdpi.png" density="port-ldpi"/>
        <splash src="splashscreen/splash.hdpi.png" density="port-hdpi"/>
        <splash src="splashscreen/splash.xhdpi.png" density="port-xhdpi"/>
        <splash src="splashscreen/splash.xxhdpi.png" density="port-xxhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.1.1" />
    <preference name="xwalkVersion" value="20+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="StatusBarBackgroundColor" value="#2196f3" />

    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="SplashScreenBackgroundColor" value="black" />
    <preference name="ShowSplashScreenSpinner" value="false" />

    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="~2.0.0" />
    <plugin name="cordova-plugin-device" spec="~1.1.2" />
    <plugin name="cordova-plugin-statusbar" spec="~2.1.3" />
    <plugin name="de.appplant.cordova.plugin.local-notification" spec="~0.8.2-dev" />
    <plugin name="cordova-plugin-push-baidu" spec="~5.3.1000" />
</widget>
